<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="null"
        android:scaleType="centerCrop"
        android:src="@drawable/location" />

    <ImageView
        android:id="@+id/imageView_round"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/overlay"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="63dp"
            android:layout_height="50dp"
            android:layout_below="@+id/text_newyork2"
            android:layout_centerHorizontal="true"
            android:progress="0"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text_pleaseWait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Please Wait"
            android:textColor="@color/colorAccent"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/text_working"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_pleaseWait"
            android:layout_alignBottom="@+id/imageView_round"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Working on the Task"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>



    <ImageView
        android:id="@+id/santinis_wlogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imageView_round"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/s"
        android:visibility="visible"
        tools:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/text_newyork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/santinis_wlogo"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="New York Style Deli"
        android:textColor="@color/white"
        android:textSize="38dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_newyork2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_newyork"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="A family tradition since 2003."
        android:textColor="@color/silver"
        android:textSize="18dp" />




</RelativeLayout>
